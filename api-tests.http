    },
    {
      "id": 2,
      "producto": {
        "id": 2,
        "nombre": "Frijoles",
        "descripcion": "Frijoles negros",
        "precio": 1.75,
        "categoria": "Alimentos",
        "codigoBarras": "7501234567891"
